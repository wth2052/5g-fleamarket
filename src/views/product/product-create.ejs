<body>
<%- include('../main-header.ejs') %>

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <form id="form" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-group">
                            <label for="title" class="col-sm-3 control-label">title</label>
                            <input type="text" id="title" name="title" class="상품의 제목을 적어주세요" placeholder="Input Default" required>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-3 control-label">description</label>
                        <div class="col-sm-9">
                            <textarea id="description" id="description" name="description" class="form-control" required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="price" class="col-sm-3 control-label">가격</label>
                        <div class="col-sm-9">
                            <input type="number" id="price" name="price" class="form-control" min="0" required>
                        </div>
                    </div>
                    <div class="row" id="categories-select">
                        <div class="form-group">
                            <label for="category">카테고리</label>
                            <select class="form-control" id="categorySelect" name="categoryId" required>
                              <option value="">-- Select a category --</option>
                              
                        </div>
                            <div class="form-group">
                                <label for="images">이미지 업로드</label>
                                <input type="file" class="form-control-file" id="images" name="images" multiple accept="image/*">
                            </div>
                            <div id="image-preview"></div>
                            <button type="submit" class="btn btn-primary">등록</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="footer">
    <div class="text-center">

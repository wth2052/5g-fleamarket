<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>상세보기</title>
    <!--    BootStrap Library-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Dongle:wght@700&family=Jua&family=Noto+Serif+KR:wght@200&display=Gowun+Dodum&display=swap"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <!--    Axios-->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <!--    Js -->
    <script><%- include('../js/main-header.js') %></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
    <script>
      $(document).ready(function() {
        $('.slider').slick({
          arrows: true,
          dots: true,
          slidesToShow: 1,
          slidesToScroll: 1,
          asNavFor: '.image-nav' // 다른 슬라이더와 연동하기 위해 사용
        });
        $('.image-nav').slick({
          slidesToShow: 3,
          slidesToScroll: 1,
          asNavFor: '.slider', // 다른 슬라이더와 연동하기 위해 사용
          centerMode: true,
          focusOnSelect: true
        });
      })
    </script>
        <script>
          function deal(productId){
          let deal = prompt('판매자가 제시한 가격보다 높게 제시해주세요!');
          while (isNaN(deal) || deal === '') {
            deal = prompt('올바르게 입력해주세요')}
          if (deal === null) {
              window.location.reload();
              }
          axios.post(`http://localhost:3000/orders/deal/price/${productId}`,{
            price: deal
          })
          .then((response) => {
            alert('가격제시 완료')
            window.location.href = '/order'
          }).catch((error) => {
            console.log(error)
            if(error.response.status === 401){
              alert('로그인해야 주문이 가능합니다.')
              window.location.href = '/login'
            }else if(error.response.status === 403){
              alert('이미 주문하셨습니다. 구매진행에서 수정해주세요')
            window.location.href = '/order'
            }
          });
        }

        // 찜하기
        function like(productId) {
            axios
              .post(`http://localhost:3000/productss/like/${productId}`)
             .then((response) => {
                alert('찜하기 완료!')
                window.location.reload();
              }).catch((error) => {
                console.log(error)
                if(error.response.status === 401){
                  alert('로그인해야 주문이 가능합니다.')
                  window.location.href = '/login'
                }else if(error.response.status === 403){
                  alert('이미 주문하셨습니다. 구매진행에서 수정해주세요')
                window.location.href = '/order'
                }
              });
            }
    </script>
    <script> 
        function kill(productId) {
          if (confirm("정말로 삭제하시겠습니까?")) {
            axios
              .put(`http://localhost:3000/productss/${productId}`)
              .then((response) => {
                alert('삭제되었습니다')
                window.location.reload(`http://localhost:3000/productss/view`);
              }).catch((error) => {
                console.log(error)
                if(error.response.status === 401){
                  alert('로그인 후 사용 가능한 기능입니다.')
                  window.location.href = '/login'
                }else if (error.response.status === 403) {
                  alert('자신이 작성한 글만 삭제할 수 있습니다.'); // 추가된 부분
                  window.location.reload(); // 페이지 새로고침
                }
              });
            }
          }

    </script>
        
<script>
  $(document).ready(function() {
    $('.slider').slick({
      arrows: true, // 좌우 화살표
      dots: true, // 동그라미 버튼
      slidesToShow: 1, // 한 번에 보여줄 슬라이드 개수
      slidesToScroll: 1, // 한 번에 넘길 슬라이드 개수
      asNavFor: '.image-nav' // 다른 슬라이더와 연동하기 위해 사용
    });
  });
</script>
    <style>
      html,
      body {
        height: 100%;
        padding: 0px;
        margin: 0px;
      }

      #wrap {
        min-height: calc(100% - 120px);
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .col-md-3-img{
        height: 30%;
        width: 80%;
        margin-left: 70px;
        
      }

      
      #image-box {
          padding: 0 0px;
      }

      #product-detail {
        max-width: 100vw;
        display: flex;
      }

      .product-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
      }

      .image-container {
        width: 20vw;
        margin-right: 20px;
        /* max-height: 70vh; */
        overflow: hidden;
      }

      .image-container img {
        width: 100%;
        height: auto;
        object-fit: contain;
      }
      .slider-nav-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        position: relative;
      }

      .slider-container {
        width: 400px;
        height: 400px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      .slider {
        width: 400px;
        height: 400px;
        display: flex;
      }

      .slider img {
        height: 100%;
        object-fit: contain;
      }

      .image-nav-container {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
      }

      .image-nav {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 70px;
        margin-top: 10px;
      }

      .image-nav img {
        max-height: 70px; /* 여기가 사이즈 */
        object-fit: contain;
        margin: 0 10px;
      }

      .image-nav img.active {
        border: 2px solid #0095ff;
      }
      .views-likes {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .views, .likes {
        margin-right: 10px;
      }

      /* 이미지 최대 높이를 초과하는 경우 */
      .image-container img[src$=".jpg"]:not(:last-child),
      .image-container img[src$=".jpeg"]:not(:last-child),
      .image-container img[src$=".png"]:not(:last-child),
      .image-container img[src$=".gif"]:not(:last-child) {
        width: 100%;
        height: 70vh; /* 이미지 최대 높이로 설정 */
        object-fit: contain; /* 이미지 비율 유지 */
        object-position: center; /* 이미지 중앙 정렬 */
      }

      @media (max-width: 768px) {
        #image-box {
          flex-direction: column;
          align-items: center;
        }
        .image-container {
          width: 100%;
          margin-right: 0;
          margin-bottom: 20px;
          max-height: none;
          overflow: visible;
        }
      }

      .category,
      .category,
      .createdAt {
        display: inline-block;
        margin-right: 10px;
      }
      .description,
      .seller,
      .views,
      .likes,
      .price {
        margin-bottom: 10px;
      }


    </style>
  </head>
  <body>
    <header><%- include('../main-header.ejs') %></header>
    <div id="wrap">
      <div class="product-detail">
        <div class="col-md-3-img" id="image-box" style="width: 100%; height: 100%; margin: 0;">
          <div class="image-container">
            <% if (product.images && product.images.length > 0) { %>
              <% if (product.images.length == 1) { %>
                <div><img src="/img/<%= product.images[0].imagePath %>" /></div>
              <% } else { %>
                <div class="slider">
                  <% for (var i = 0; i < Math.min(product.images.length, 3); i++) { %>
                    <div><img src="/img/<%= product.images[i].imagePath %>" /></div>
                  <% } %>
                </div>
                <div class="image-nav">
                  <% for (var i = 0; i < Math.min(product.images.length, 3); i++) { %>
                    <div><img src="/img/<%= product.images[i].imagePath %>%>" style="height: 100px"/></div>
                  <% } %>
                </div>
              <% } %>
            <% } else { %>
              <div><img src="/img/image-not-available.png" /></div>
            <% } %>
          </div>
        </div><br>
        </div>
        <div class="info-container">
          <h1><%= product.title %></h1>    
          <div class="category"><u><%= product.category.name %></u></div>
          <div class="createdAt"><%= product.createdAt.getFullYear() %>/<%= product.createdAt.getMonth() + 1 %>/<%= product.createdAt.getDate() %> <%= product.createdAt.getHours() %>:<%= product.createdAt.getMinutes() %></div>
          <div class="script"> 판매자: <%= product.seller.nickname %></div>
          <div class="price">Price: <%= product.price %>원 </div>
        </br>
          <div class="description"> 
            <% if (product.description.length > 20) { %>
            <% for (let i = 0; i < product.description.length; i += 20) { %>
              <%= product.description.slice(i, i+20) %><br>
            <% } %>
          <% } else { %>
            <%= product.description %>
          <% } %></div>
          <div class="views-likes">
            <div class="views">Views: <%= product.viewCount %></div>
            <div class="likes">Likes: <%= product.likes %></div>
          </div>          
          <div class="deal"><button id='deal11' onclick="deal(<%= product.id %>)">딜하기</button> </div>
          <div class="deal"><button id='deal11' onclick="like(<%= product.id %>)">찜하기</button> </div>
          <div class="delete"><button id='delete' onclick="kill(<%= product.id %>)">삭제하기</button> </div>
        </div>
      </div>
    </div>
    <footer><%- include('../main-footer.ejs') %></footer>
  </body>
</html>

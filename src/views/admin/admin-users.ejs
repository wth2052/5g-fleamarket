<body>

  <%- include('admin-header.ejs')%>

<div class="container-fluid" style="background:#eee; margin-top: 40px; margin-bottom: 40px;">
  <div class="container" style="background: #fff; margin-top: 20px;padding: 0;">
    
    <% if (typeof errorMessage !== 'undefined') { %>
            <%= errorMessage %>
          <% } else if (users) { %>


            <% for (var i = 0; i < users.length; i++) { %>
              <div class="container-fluid" style="border: 1px solid red; margin-top: 20px;" onclick="getUser(`<%=users[i].id %>`)">
                <div class="row">
                  
                    <div class="col-md-9">
                      <h3>nickname: <%= users[i].nickname %></h3>
                      <p>email: <%= users[i].email %> <br></p>
                      <h4> phone: <%= users[i].phone %></h4>
                      <% if (users[i].ban === 1) {%> <span>ban status: 블랙리스트 </span><%} %>
                      <span style="float: right;">뭔지 모르겠지만 로고 몇개</span>
                    </div>
                </div>
              </div>
            <% } %>

            
          <% } %>
  </div>
</div>

<!--하단 메뉴바-->

<%- include('admin-footer.ejs')%>

</body>

<script>

    function getUser (userId) {
        window.location.replace(`http://localhost:3000/users/${userId}`)
    }



</script>

</html>
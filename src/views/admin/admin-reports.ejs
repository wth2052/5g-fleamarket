<style>
#reports-btn{
    background-color: #05AFF2;
  }
  .col-md-8 > h3{
    margin-top: 15px;
    margin-bottom: -5px;
  }
</style>
<script>

</script>
<body>

  <%- include('admin-header.ejs')%>

  <div class="container-fluid" style="background:#eee; margin-top: 40px; margin-bottom: 40px;">
    <div class="container" style="background: #fff; margin-top: 20px;padding: 0;" id="bb">
      
      <% if (typeof errorMessage !== 'undefined') { %>
              <%= errorMessage %>
            <% } else if (reports) { %>
  
  
              <% for (var i = 0; i < reports.length; i++) { %>
                <div class="container-fluid" style=" margin-top: 20px;" onclick="getReport(`<%=reports[i].id %>`)">
                  <div class="row">
                    <div class="col-md-2" id="image-container"></div> 
                      <div class="col-md-8" style="border: 3px dotted #5cd7f2; border-radius: 3px; cursor: pointer;">
                        <h3><%= reports[i].title %></h3>
                        <% if (reports[i].status === 0) {%><span style="float: right;"> ❌</span><%} %>
                        <% if (reports[i].status === 1) {%><span style="float: right;"> ✅</span><%} %>
                      </div>
                  </div>
                </div>
              <% } %>
              <input type="hidden" value="<%= reports.length %>" id="reportsLength">
              <input type="hidden" value="<%= totalReports %>" id="totalReports">

              
            <% } %>
    </div>
  </div>

<!--하단 메뉴바-->

<%- include('admin-footer.ejs')%>

</body>
